import java.util.Scanner;

public class Swordsman {
	
	private int healthpoints;
	private int magicpoints;
	private int attackpoints;
	private int fire = 50; 
	private int ice = 40; 
	private int lightning = 60;
	private int potion = 50;
	private int ether = 50;
	private int cure = 100;
	
	public Swordsman() {
		super();
		Scanner in = new Scanner(System.in);
		System.out.println("Please enter a number between 1000-2000 for the health points");
		int health = in.nextInt();
		this.healthpoints = health;
		
		System.out.println("Please enter a number between 1000-1500  for the magic points");
		int magic = in.nextInt();
		this.magicpoints = magic;
		
		
		this.attackpoints = attackpoints;
	}
	
	public int getHealthpoints() {
		return healthpoints;
	}
	public void setHealthpoints(int healthpoints) {
		this.healthpoints = healthpoints;
	}
	public int getMagicpoints() {
		return magicpoints;
	}
	public void setMagicpoints(int magicpoints) {
		this.magicpoints = magicpoints;
	}
	public int getAttackpoints() {
		return attackpoints;
	}
	public void setAttackpoints(int attackpoints) {
		this.attackpoints = attackpoints;
	}
	
	public void potion() {
		
	}
	
	
	
	
	

}
